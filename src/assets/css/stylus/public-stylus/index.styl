    cursor pointer

opa(n)
    filter unquote('progid:DXImageTransform.Microsoft.Alpha(opacity=70)')
    vendor(opacity , n)

.modal-popup
    background #000
    fixed()
    w(100%)
    h(100%)
    t(0)
    l(0)
    r(0)
    b(0)
    overa()
    opa(.7)
    z-index 88
